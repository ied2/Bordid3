<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <EditText
        android:id="@+id/dialog_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/dialog_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:hint="Email"
        android:layout_below="@+id/dialog_name"/>

    <EditText
        android:id="@+id/dialog_phonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_email"
        android:hint="Phone Number"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/dialogButtonOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_phonenumber"
        android:text="Save"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp" />

    <Button
        android:id="@+id/dialogButtonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_phonenumber"
        android:layout_toRightOf="@+id/dialogButtonOK"
        android:text="Cancel"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp" />

</RelativeLayout>