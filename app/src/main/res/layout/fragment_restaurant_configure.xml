<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <EditText
        android:id="@+id/dialog_restaurant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/dialog_restaurant_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textColor="#000000"
        android:layout_below="@+id/dialog_restaurant_name"/>

    <EditText
        android:id="@+id/dialog_restaurant_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:textColor="#000000"
        android:layout_below="@+id/dialog_restaurant_email"/>

    <EditText
        android:id="@+id/dialog_restaurant_zip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Zip"
        android:layout_below="@+id/dialog_restaurant_address"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/dialog_restaurant_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="City"
        android:layout_below="@+id/dialog_restaurant_zip"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/dialog_restaurant_phonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:layout_below="@+id/dialog_restaurant_city"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/dialog_restaurant_numSeats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Number of Seats"
        android:layout_below="@+id/dialog_restaurant_phonenumber"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/dialog_restaurant_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Logo URL"
        android:layout_below="@+id/dialog_restaurant_numSeats"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/dialog_restaurant_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Latitude"
        android:layout_below="@+id/dialog_restaurant_url"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/dialog_restaurant_longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Longitude"
        android:layout_below="@+id/dialog_restaurant_latitude"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/rdialogButtonOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_restaurant_longitude"
        android:text="Save"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp" />

    <Button
        android:id="@+id/rdialogButtonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_restaurant_longitude"
        android:layout_toRightOf="@+id/rdialogButtonOK"
        android:text="Cancel"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp" />

</RelativeLayout>